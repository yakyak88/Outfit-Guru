import React, { createContext, useEffect, useState } from "react";
import axios from "axios";

export const AppContext = createContext();

const AppContextProvider = ({ children }) => {
    const initialState = {
        savedSets: 0,
        shoes: 0,
        shirts: 0,
        pants: 0,
    };

    const [availableItems, setAvailableItems] = useState(initialState);

    useEffect(() => {
        const fetchData = async () => {
            try {
                const response = await axios.get(
                    "https://run.mocky.io/v3/2d06d2c1-5a77-4ecd-843a-53247bcb0b94"
                );
                const data = response.data;
                const shoesCount = data.filter(
                    (item) => item.type === "shoes"
                ).length;
                const shirtsCount = data.filter(
                    (item) => item.type === "shirt"
                ).length;
                const pantsCount = data.filter(
                    (item) => item.type === "pants"
                ).length;

                setAvailableItems({
                    ...initialState,
                    shoes: shoesCount,
                    shirts: shirtsCount,
                    pants: pantsCount,
                });
            } catch (error) {
                console.log("Error fetching data from the API:", error);
            }
        };

        fetchData();
    }, []);

    return (
        <AppContext.Provider value={availableItems}>
            {children}
        </AppContext.Provider>
    );
};

export default AppContextProvider;
